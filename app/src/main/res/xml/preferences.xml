<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.preference.PreferenceCategory android:title="@string/units">
        <androidx.preference.SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="@string/celsius"
            android:title="@string/use_celsius" />
    </androidx.preference.PreferenceCategory>

    <androidx.preference.PreferenceCategory android:title="@string/localization">
        <androidx.preference.ListPreference
            android:defaultValue="en"
            android:entries="@array/languages"
            android:entryValues="@array/languages_values"
            android:key="@string/language"
            android:title="@string/pref_language" />
    </androidx.preference.PreferenceCategory>


</androidx.preference.PreferenceScreen>